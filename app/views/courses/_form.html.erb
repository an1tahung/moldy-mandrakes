<%= form_for @course, :html => {:multipart => true} do |f| %>
  <% if @course.errors.any? %>
    <div>
      <%= pluralize(@course.errors.count, "error") %> prevented this course from being submitted:
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :professor %><br>
    <%= f.text_field :professor %>
  </div>
  <div>
    <%= f.label :poster_image %><br>
    <%= f.file_field :poster_image %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>